{
  "name": "salesforce-agent-backend",
  "version": "1.0.0",
  "description": "Serverless backend for Salesforce Agent",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "sam build",
    "deploy": "sam deploy",
    "local": "sam local start-api",
    "logs": "sam logs -n ChatFunction --stack-name salesforce-agent --tail"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "aws-sdk-client-mock": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests/",
      "<rootDir>/src/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}